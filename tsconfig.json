{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "lib": ["ESNext"],
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types", "./types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
